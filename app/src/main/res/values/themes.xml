<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParkingService" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBarColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ParkingService.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FoodPlace.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FoodPlace.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- navigation drawer style -->
    <style name="DrawerLayoutTextStyle" parent="Widget.AppCompat.TextView">
        <!-- text size in menu-->
        <item name="android:textSize">@dimen/navigation_menu_text_size</item>
    </style>

    <style name="FavoriteToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Dark</item>
    </style>

    <!-- Favorite Activity Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/toolbarTitleColor</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">17sp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->1
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReviewWriteToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.ColorPrimary</item>
    </style>

    <!-- Review Write Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.ColorPrimary" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorPrimary</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">17sp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->1
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>                                <!-- 배경 -->
        <item name="colorAccent">@color/colorPrimary</item>                    <!-- 하단 움직이는 바 색-->
        <item name="tabSelectedTextColor">@color/selectedTabTextColor</item>
        <item name="tabTextColor">@color/unselectedTabTextColor</item>     <!-- 기본 탭바 텍스트 -->
    </style>

</resources>