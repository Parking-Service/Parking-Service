<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.main.MainActivity">

        <include android:id="@+id/main_container"
            layout="@layout/content_main" />
        <include layout="@layout/content_main_top"
            android:layout_marginHorizontal="@dimen/content_main_menu_bar_margin_horizontal"
            android:layout_marginTop="@dimen/content_main_menu_bar_margin_vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            app:backgroundTint="@color/white"
            app:tint="@color/mainActivityFabTint"
            app:srcCompat="@drawable/ic_gps"
            app:fabSize="normal"
            app:rippleColor="@android:color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>